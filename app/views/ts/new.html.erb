<div class="ui-grid-b">
	<div class="ui-block-a"></div>
	<div class="ui-block-b">
		<div style="margin: 0.7em -2.5em 0.7em -2.5em"><%= link_to("Back", "#", "data-role" => "button", "data-theme"=>"e", "data-icon"=>"back", "data-rel"=>"back")%></div>
	</div>
</div>

<%= form_for(@topic) do |f| %>

  <div class="field">
    <%= f.text_area :title, "placeholder"=>"Submit a new controversial topic/question! ..."%></br>
  </div>
	<div data-role="collapsible">
  	<h2>Optional: Add Description</h2>
		<p style="font-size: 0.9em; margin: -0.2em 0 0.8em 0; line-spacing: 130%">This is meant to educate users on the relevant background info of your topic.  This will be editable by other users, wiki-style.</p>
  	<div class="field">
	    <%= f.text_area :description, "placeholder"=>" Add a brief, objective explanation of your topic ... "%>
	  </div>
	</div>

	<div class="ui-grid-b">
		<div class="ui-block-a"></div>
		<div class="ui-block-b">
			<div class="actions", style="margin: 0.7em -2.5em 0.7em -2.5em">
		    <%= f.submit "Submit!", "data-theme"=>"b", "data-icon"=>"check"%>
		  </div>
		</div>
	</div>	

<% end %>
