<div data-role="page" id="votingviewpros">
	<%= link_to("Finished Voting", "#pros", "data-role" => "button", "data-icon"=>"back", "data-iconpos"=>"left", "data-theme"=>"e", "data-mini"=>"true")%>

	<div class="ui-grid-a">
		<div class="ui-block-a"><a href="#" data-role="button", data-icon="arrow-d", data-theme="b", data-iconpos="right", data-mini="true"> Pros </a></div>
		<div class="ui-block-b"><a href="#cons" data-role="button", data-theme="c", data-transition="flip", data-mini="true"> Cons </a></div>
	</div>

	<div data-role="content">
		<ul data-role="listview">
			<% @pros.each do |i|%>
