<div data-role="page" id="pros">
	<div data-role="navbar" data-iconpos="left" style="background-color:#303030;">
		<ul>
			<li><%= link_to "Quiz!", showquestion_reason_path(@reason), {"data-ajax"=>"false", "data-role"=>"button", "data-mini"=>"true", "data-icon"=>"check", "data-theme"=>"a"}%></li>
			<li><%= link_to "Home", ts_path, {"data-role"=>"button", "data-mini"=>"true", "data-icon"=>"home", "data-theme"=>"a"}%></li>
			<li><%= link_to "Vote!", "#votingviewpros", {"data-role"=>"button", "data-mini"=>"true", "data-icon"=>"gear", "data-theme"=>"a"}%></li>
		</ul>
	</div>

	<ul data-role="listview" data-split-icon="info" data-split-theme="c">
		<li>
			<a href="#"><p style="margin: 0 -3.3em 0 -0.8em; text-align: center; line-height:135%; font-size: 1em; font-weight: bold; white-space: normal;"><%= @topic.title %></p></a>
			<%= link_to "Topic Description", description_t_path(@topic), {"data-icon"=>"info", "data-iconpos"=>"notext", "data-theme"=>"e", "data-transition"=>"slidedown", "class"=>"ui-btn-right" }%>
		</li>
	</ul>
	
	<div class="ui-grid-a">
		<div class="ui-block-a"><a href="#" data-role="button", data-icon="arrow-d", data-theme="b", data-iconpos="right"> Pros </a></div>
		<div class="ui-block-b"><a href="#cons" data-role="button", data-theme="c", data-transition="flip"> Cons </a></div>
	</div>

	<div data-role="content">
		<ul data-role="listview">
			<% @pros.each do |i|%>
				<li>
					<%= link_to(i, :style=>"white-space: normal; margin: 0 -0.9em 0 -0.8em; font-size: 0.9em;") do %>
						<%= i.title %>
						<span class="ui-li-count"><%=i.score%></span>
					<% end %>
				</li>
			<% end %>
		</ul>
	</div>
</div>

