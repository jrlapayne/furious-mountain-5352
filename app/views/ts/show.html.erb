<div data-role="page" id="pros">
	<div data-role="navbar" data-iconpos="right" style="background-color:#303030;">
		<ul>
			<li><%= link_to "Home", ts_path, {"data-role"=>"button", "data-mini"=>"true", "data-icon"=>"home", "data-theme"=>"a"}%></li>
			<li><a href="#votingviewpros" data-role="button", data-icon="gear", data-theme="a", data-mini="true", style="color: #ffd700;"> Vote! </a></li>
			<li><%= link_to "Quiz!", showquestion_reason_path(@reason), {"data-ajax"=>"false", "data-role"=>"button", "data-mini"=>"true", "data-icon"=>"check", "data-theme"=>"a"}%></li>
		</ul>
	</div>

	<ul data-role="listview" data-split-icon="info" data-split-theme="c">
		<li>
			<a href="#"><p style="margin: 0 -3.3em -0.5em -0.8em; text-align: center; line-height:135%; font-size: 0.95em; font-weight: bold; white-space: normal;"><%= @topic.title %></p></a>
			<%= link_to "Topic Description", description_t_path(@topic), {"data-icon"=>"info", "data-iconpos"=>"notext", "data-theme"=>"e", "data-transition"=>"slidedown", "class"=>"ui-btn-right" }%>
		</li>
	</ul>
	
	<div class="ui-grid-a">
		<div class="ui-block-a">
			<div style="margin: 0 -3.5em 0 0"><a href="#" data-role="button", data-icon="arrow-d", data-theme="b", data-iconpos="right", data-mini="true"> Pros </a></div>
		</div>
		<div class="ui-block-b">
			<div style="margin: 0 0 0 3.5em"><a href="#cons" data-role="button", data-theme="c", data-mini="true", data-transition="flip"> Cons </a></div>
		</div>
	</div>

	<div data-role="content">
		<ul data-role="listview">
			<% @pros.each do |i|%>
				<li>
					<%= link_to(i, :style=>"white-space: normal; margin: 0 -1.6em 0 -0.8em; font-size: 0.8em;") do %> <%= i.title %>
						<span class="ui-li-count"><%=i.score%></span>
					<% end %>
				</li>
			<% end %>
		</ul>
	</div>
</div>

